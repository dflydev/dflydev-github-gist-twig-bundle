<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dflydev_twig_github_gist.cache_dir">%kernel.cache_dir%/dflydevTwigGitHubGist</parameter>
        <parameter key="dflydev_twig_github_gist.transport.native_php.class">dflydev\twig\extension\gitHub\gist\transport\NativePhpTransport</parameter>
        <parameter key="dflydev_twig_github_gist.cache.native_php.class">dflydev\twig\extension\gitHub\gist\cache\FilesystemCache</parameter>
        <parameter key="dflydev_twig_github_gist.extension.class">dflydev\twig\extension\gitHub\gist\GistTwigExtension</parameter>
    </parameters>

    <services>

        <service id="dflydev_twig_github_gist.transport.native_php" class="%dflydev_twig_github_gist.transport.native_php.class%" />

        <service id="dflydev_twig_github_gist.cache.filesystem" class="%dflydev_twig_github_gist.cache.filesystem.class%">
            <argument>%dflydev_twig_github_gist.cache_dir%</argument>
        </service>

        <service id="dflydev_twig_github_gist.extension" class="%dflydev_twig_github_gist.extension.class%">
            <argument type="service" id="dflydev_twig_github_gist.transport.native_php" />
            <tag name="twig.extension" />
        </service>

    </services>

</container>
